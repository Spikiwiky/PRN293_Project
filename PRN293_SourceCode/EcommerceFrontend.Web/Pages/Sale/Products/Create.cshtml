@page
@model EcommerceFrontend.Web.Pages.Sale.Products.CreateModel
@{
}

<h1>Create Product</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Product.Name"></label>
        <input asp-for="Product.Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Product.Description"></label>
        <input asp-for="Product.Description" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Product.ProductCategoryId"></label>
        <input asp-for="Product.ProductCategoryId" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Product.Brand"></label>
        <input asp-for="Product.Brand" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Product.BasePrice"></label>
        <input asp-for="Product.BasePrice" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Product.AvailableAttributes"></label>
        <input asp-for="Product.AvailableAttributes" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Product.Status"></label>
        <input asp-for="Product.Status" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Product.IsDelete"></label>
        <input asp-for="Product.IsDelete" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>