@page
@model EcommerceFrontend.Web.Pages.Sale.Products.EditModel
@{
    ViewData["Title"] = "Edit Product";
}

<h1>Edit Product</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Product.ProductId">Product ID</label>
        <input asp-for="Product.ProductId" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Product.Name"></label>
        <input asp-for="Product.Name" class="form-control" required />
        <span asp-validation-for="Product.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.Description"></label>
        <input asp-for="Product.Description" class="form-control" required minlength="5" maxlength="500" />
        <span asp-validation-for="Product.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.ProductCategoryId"></label>
        <input asp-for="Product.ProductCategoryId" type="number" class="form-control" required min="1" />
        <span asp-validation-for="Product.ProductCategoryId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.Brand"></label>
        <input asp-for="Product.Brand" class="form-control" required />
        <span asp-validation-for="Product.Brand" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.BasePrice"></label>
        <input asp-for="Product.BasePrice" type="number" step="0.01" class="form-control" required min="0" />
        <span asp-validation-for="Product.BasePrice" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.AvailableAttributes"></label>
        <input asp-for="Product.AvailableAttributes" class="form-control" required />
        <span asp-validation-for="Product.AvailableAttributes" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.Status"></label>
        <input asp-for="Product.Status" type="number" class="form-control" required min="0" max="1" />
        <span asp-validation-for="Product.Status" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.IsDelete">Mark as Deleted</label>
        <input asp-for="Product.IsDelete" type="checkbox" class="form-check-input" />
        <span asp-validation-for="Product.IsDelete" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-page="Index" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
