@page "{id:int}"
@model EcommerceFrontend.Web.Pages.Sale.Sale_User.EditModel
@{
    ViewData["Title"] = "Chỉnh sửa User";
    Layout = "_SaleLayout";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-page="/Sale/Sale_User/Index" class="text-decoration-none">
                            <i class="fas fa-users me-1"></i>Quản lý User
                        </a>
                    </li>
                    <li class="breadcrumb-item active">Chỉnh sửa User</li>
                </ol>
            </nav>
            <h1 class="h2 text-warning mb-0">
                <i class="fas fa-user-edit me-2"></i>Chỉnh sửa User
            </h1>
            <hr class="mt-3">
        </div>
    </div>

    <!-- Error Message -->
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Lỗi!</strong> @Model.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            </div>
        </div>
    }

    <!-- Edit Form -->
    <div class="row justify-content-center">
        <div class="col-xl-10">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-warning text-dark">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>Thông tin User
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <div class="row">
                            <!-- Account Information -->
                            <div class="col-12 mb-4">
                                <h6 class="text-primary border-bottom pb-2 mb-3">
                                    <i class="fas fa-user-circle me-2"></i>Thông tin tài khoản
                                </h6>
                            </div>

                            <!-- Email -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-envelope me-1"></i>Email <span class="text-danger">*</span>
                                </label>
                                <input asp-for="UserDto.Email"
                                       class="form-control form-control-lg"
                                       type="email"
                                       placeholder="example@email.com"
                                       required />
                                <span asp-validation-for="UserDto.Email" class="text-danger small"></span>
                            </div>

                            <!-- Password -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-lock me-1"></i>Password
                                </label>
                                <div class="input-group">
                                    <input asp-for="UserDto.Password"
                                           class="form-control form-control-lg"
                                           type="password"
                                           placeholder="Để trống nếu không đổi mật khẩu" />
                                    <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="UserDto.Password" class="text-danger small"></span>
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Để trống nếu không muốn thay đổi mật khẩu
                                </div>
                            </div>

                            <!-- Username -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-user me-1"></i>UserName <span class="text-danger">*</span>
                                </label>
                                <input asp-for="UserDto.UserName"
                                       class="form-control form-control-lg"
                                       placeholder="Tên người dùng"
                                       required />
                                <span asp-validation-for="UserDto.UserName" class="text-danger small"></span>
                            </div>

                            <!-- Role ID -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-user-tag me-1"></i>Role ID
                                </label>
                                <select asp-for="UserDto.RoleId" class="form-select form-select-lg">
                                    <option value="">Chọn vai trò</option>
                                    <option value="1">Admin</option>
                                    <option value="2">User</option>
                                    <option value="3">Manager</option>
                                </select>
                                <span asp-validation-for="UserDto.RoleId" class="text-danger small"></span>
                            </div>

                            <!-- Personal Information -->
                            <div class="col-12 mt-4 mb-4">
                                <h6 class="text-info border-bottom pb-2 mb-3">
                                    <i class="fas fa-address-card me-2"></i>Thông tin cá nhân
                                </h6>
                            </div>

                            <!-- Date of Birth -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-calendar me-1"></i>Ngày sinh
                                </label>
                                <input asp-for="UserDto.DateOfBirth"
                                       type="date"
                                       class="form-control form-control-lg" />
                                <span asp-validation-for="UserDto.DateOfBirth" class="text-danger small"></span>
                            </div>

                            <!-- Phone -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-phone me-1"></i>Số điện thoại
                                </label>
                                <input asp-for="UserDto.Phone"
                                       class="form-control form-control-lg"
                                       placeholder="0123456789"
                                       pattern="[0-9]{10,11}" />
                                <span asp-validation-for="UserDto.Phone" class="text-danger small"></span>
                                <div class="form-text">Nhập số điện thoại 10-11 số</div>
                            </div>

                            <!-- Address -->
                            <div class="col-12 mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-map-marker-alt me-1"></i>Địa chỉ
                                </label>
                                <textarea asp-for="UserDto.Address"
                                          class="form-control"
                                          rows="3"
                                          placeholder="Nhập địa chỉ đầy đủ"></textarea>
                                <span asp-validation-for="UserDto.Address" class="text-danger small"></span>
                            </div>

                            <!-- System Settings -->
                            <div class="col-12 mt-4 mb-4">
                                <h6 class="text-warning border-bottom pb-2 mb-3">
                                    <i class="fas fa-cog me-2"></i>Cài đặt hệ thống
                                </h6>
                            </div>

                            <!-- Status -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-toggle-on me-1"></i>Trạng thái
                                </label>
                                <select asp-for="UserDto.Status" class="form-select form-select-lg">
                                    <option value="true">Hoạt động</option>
                                    <option value="false">Không hoạt động</option>
                                </select>
                                <span asp-validation-for="UserDto.Status" class="text-danger small"></span>
                            </div>

                            <!-- Is Delete -->
                            <div class="col-md-6 mb-3">
                                <label class="form-label fw-bold">
                                    <i class="fas fa-trash me-1"></i>Đánh dấu xóa
                                </label>
                                <div class="card border-danger">
                                    <div class="card-body">
                                        <div class="form-check form-switch">
                                            <input asp-for="UserDto.IsDelete"
                                                   class="form-check-input"
                                                   id="deleteSwitch" />
                                            <label asp-for="UserDto.IsDelete"
                                                   class="form-check-label fw-bold text-danger"
                                                   for="deleteSwitch">
                                                <i class="fas fa-exclamation-triangle me-1"></i>Đánh dấu là đã xóa
                                            </label>
                                        </div>
                                        <small class="text-muted">
                                            User sẽ bị ẩn khỏi danh sách nhưng không bị xóa vĩnh viễn
                                        </small>
                                        <span asp-validation-for="UserDto.IsDelete" class="text-danger small d-block"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-page="/Sale/Sale_User/Index" class="btn btn-outline-secondary btn-lg me-md-2">
                                <i class="fas fa-arrow-left me-2"></i>Quay lại
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg text-dark">
                                <i class="fas fa-save me-2"></i>Cập nhật User
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Help Section -->
            <div class="card mt-4 border-info">
                <div class="card-body">
                    <h6 class="card-title text-info">
                        <i class="fas fa-lightbulb me-2"></i>Lưu ý khi chỉnh sửa User
                    </h6>
                    <div class="row">
                        <div class="col-md-6">
                            <ul class="list-unstyled mb-0">
                                <li class="mb-2">
                                    <i class="fas fa-check text-success me-2"></i>
                                    Không cần nhập lại mật khẩu nếu không đổi
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-check text-success me-2"></i>
                                    Email phải là duy nhất trong hệ thống
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <ul class="list-unstyled mb-0">
                                <li class="mb-2">
                                    <i class="fas fa-check text-success me-2"></i>
                                    Trạng thái ảnh hưởng đến khả năng đăng nhập
                                </li>
                                <li class="mb-0">
                                    <i class="fas fa-check text-success me-2"></i>
                                    Đánh dấu xóa sẽ ẩn user khỏi danh sách
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Toggle password visibility
        document.getElementById('togglePassword').addEventListener('click', function() {
            const passwordInput = document.querySelector('input[asp-for="UserDto.Password"]');
            const icon = this.querySelector('i');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                icon.classList.remove('fa-eye');
                icon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                icon.classList.remove('fa-eye-slash');
                icon.classList.add('fa-eye');
            }
        });

        // Delete switch interaction
        document.getElementById('deleteSwitch').addEventListener('change', function() {
            const label = this.nextElementSibling;
            if (this.checked) {
                label.classList.remove('text-danger');
                label.classList.add('text-warning');
                label.innerHTML = '<i class="fas fa-check me-1"></i>Đã đánh dấu xóa';
            } else {
                label.classList.remove('text-warning');
                label.classList.add('text-danger');
                label.innerHTML = '<i class="fas fa-exclamation-triangle me-1"></i>Đánh dấu là đã xóa';
            }
        });

        // Phone number formatting
        document.querySelector('input[asp-for="UserDto.Phone"]').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length > 11) {
                value = value.slice(0, 11);
            }
            e.target.value = value;
        });
    </script>
}

<style>
    .card {
        border-radius: 0.5rem;
        transition: transform 0.2s ease-in-out;
    }

    .form-control:focus,
    .form-select:focus {
        border-color: #ffc107;
        box-shadow: 0 0 0 0.2rem rgba(255, 193, 7, 0.25);
    }

    .btn {
        font-weight: 500;
        transition: all 0.2s ease-in-out;
    }

        .btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

    .container-fluid {
        padding: 2rem;
    }

    .border-bottom {
        border-color: #dee2e6 !important;
    }

    .d-grid.gap-2.d-md-flex {
        flex-direction: column;
    }

    .col-md-6 {
        margin-bottom: 1rem;
    }

    }
</style>