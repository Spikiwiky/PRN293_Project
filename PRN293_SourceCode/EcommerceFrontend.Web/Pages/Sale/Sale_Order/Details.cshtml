@page "{id:int}"
@model EcommerceFrontend.Web.Pages.Sale.Sale_Order.DetailsModel
@{
    ViewData["Title"] = "Chi tiết đơn hàng";
}

<h2>Chi tiết đơn hàng #@Model.RouteData.Values["id"]</h2>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">@Model.ErrorMessage</div>
}
else
{
    <div class="card mb-4">
        <div class="card-body">
            <h5 class="card-title">Thông tin chung</h5>
            <p><strong>Customer ID:</strong> @Model.CustomerId</p>
            <p><strong>Payment Method:</strong> @Model.PaymentMethodName</p>
            <p><strong>Status:</strong> @Model.OrderStatusName</p>
            <p><strong>Order Note:</strong> @Model.OrderNote</p>
            <p><strong>Shipping Address:</strong> @Model.ShippingAddress</p>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Chi tiết sản phẩm</h5>
            <table class="table">
                <thead>
                    <tr>
                        <th>Product ID</th>
                        <th>Variant ID</th>
                        <th>Quantity</th>
                        <th>Price</th>
                        <th>Product Name</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var detail in Model.OrderDetails)
                    {
                        <tr>
                            <td>@detail.ProductId</td>
                            <td>@(detail.VariantId?.ToString() ?? "N/A")</td>
                            <td>@detail.Quantity</td>
                            <td>@detail.Price?.ToString("N2")</td>
                            <td>@detail.ProductName</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <a asp-page="/Sale/Sale_Order/Index" class="btn btn-secondary mt-3">Quay lại</a>
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
}
