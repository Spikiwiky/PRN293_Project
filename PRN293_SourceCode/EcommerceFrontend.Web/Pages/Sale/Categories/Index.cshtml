@page
@model EcommerceFrontend.Web.Pages.Sale.Categories.IndexModel
@{
    ViewData["Title"] = "Category List";
    Layout = "_SaleLayout";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1 class="h2 text-primary mb-0">
                    <i class="fas fa-tags me-2"></i>Category Management
                </h1>
                <a asp-page="Create" class="btn btn-primary btn-lg shadow-sm">
                    <i class="fas fa-plus me-2"></i>Create New Category
                </a>
            </div>
            <hr class="mt-3">
        </div>
    </div>

    <!-- Categories Table -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-light border-0">
                    <h5 class="card-title mb-0 text-secondary">
                        <i class="fas fa-list me-2"></i>All Categories
                    </h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.Categories != null && Model.Categories.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-striped mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th scope="col" class="text-center" style="width: 15%;">
                                            <i class="fas fa-hashtag me-1"></i>ID
                                        </th>
                                        <th scope="col" style="width: 55%;">
                                            <i class="fas fa-tag me-1"></i>Category Title
                                        </th>
                                        <th scope="col" class="text-center" style="width: 30%;">
                                            <i class="fas fa-cogs me-1"></i>Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var category in Model.Categories)
                                    {
                                        <tr>
                                            <td class="text-center align-middle">
                                                <span class="badge bg-secondary fs-6">
                                                    @category.ProductCategoryId
                                                </span>
                                            </td>
                                            <td class="align-middle">
                                                <strong class="text-dark">
                                                    @category.ProductCategoryTitle
                                                </strong>
                                            </td>
                                            <td class="text-center align-middle">
                                                <div class="btn-group" role="group">
                                                    <a asp-page="Edit"
                                                       asp-route-id="@category.ProductCategoryId"
                                                       class="btn btn-warning btn-sm me-1"
                                                       title="Edit Category">
                                                        <i class="fas fa-edit me-1"></i>Edit
                                                    </a>
                                                    <form method="post"
                                                          asp-page-handler="Delete"
                                                          asp-route-id="@category.ProductCategoryId"
                                                          style="display:inline;">
                                                        <button type="submit"
                                                                class="btn btn-danger btn-sm"
                                                                title="Delete Category"
                                                                onclick="return confirm('Are you sure you want to delete this category?')">
                                                            <i class="fas fa-trash me-1"></i>Delete
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <div class="mb-3">
                                <i class="fas fa-inbox fa-3x text-muted"></i>
                            </div>
                            <h5 class="text-muted">No Categories Found</h5>
                            <p class="text-muted mb-3">There are no categories to display at the moment.</p>
                            <a asp-page="Create" class="btn btn-primary">
                                <i class="fas fa-plus me-2"></i>Create Your First Category
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Additional Styles -->
<style>
    .table th {
        font-weight: 600;
        letter-spacing: 0.5px;
    }

    .btn-group .btn {
        border-radius: 0.375rem !important;
    }

    .card {
        border-radius: 0.5rem;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(0, 123, 255, 0.05);
    }

    .badge {
        font-weight: 500;
    }

    .btn {
        font-weight: 500;
        transition: all 0.2s ease-in-out;
    }

        .btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

    .card-header {
        padding: 1rem 1.5rem;
    }

    .container-fluid {
        padding: 2rem;
    }

    .btn-group {
        flex-direction: column;
    }

        .btn-group .btn {
            margin-bottom: 0.25rem;
        }

    .d-flex.justify-content-between {
        flex-direction: column;
        align-items: flex-start !important;
    }

        .d-flex.justify-content-between .btn {
            margin-top: 1rem;
            align-self: stretch;
        }

    }
</style>