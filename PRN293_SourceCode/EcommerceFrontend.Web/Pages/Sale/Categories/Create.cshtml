@page
@model EcommerceFrontend.Web.Pages.Sale.Categories.CreateModel
@{
    ViewData["Title"] = "Create Category";
    Layout = "_SaleLayout";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-page="Index" class="text-decoration-none">
                            <i class="fas fa-tags me-1"></i>Categories
                        </a>
                    </li>
                    <li class="breadcrumb-item active">Create New</li>
                </ol>
            </nav>
            <h1 class="h2 text-success mb-0">
                <i class="fas fa-plus-circle me-2"></i>Create New Category
            </h1>
            <hr class="mt-3">
        </div>
    </div>

    <!-- Create Form -->
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-success text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>New Category Details
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <div class="row">
                            <!-- Category Title -->
                            <div class="col-12 mb-4">
                                <label asp-for="Category.ProductCategoryTitle" class="form-label fw-bold fs-5">
                                    <i class="fas fa-tag me-2"></i>Category Title <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Category.ProductCategoryTitle"
                                       class="form-control form-control-lg"
                                       required
                                       placeholder="Enter a descriptive category name"
                                       autocomplete="off" />
                                <span asp-validation-for="Category.ProductCategoryTitle" class="text-danger small"></span>
                                <div class="form-text">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Choose a clear, descriptive name for your category
                                </div>
                            </div>

                            <!-- Delete Status -->
                            <div class="col-12 mb-4">
                                <div class="card border-warning bg-light">
                                    <div class="card-body">
                                        <h6 class="card-title text-warning mb-3">
                                            <i class="fas fa-cog me-2"></i>Advanced Options
                                        </h6>
                                        <div class="form-check form-switch">
                                            <input asp-for="Category.IsDelete"
                                                   class="form-check-input"
                                                   id="deleteSwitch" />
                                            <label asp-for="Category.IsDelete"
                                                   class="form-check-label fw-bold"
                                                   for="deleteSwitch">
                                                <i class="fas fa-eye-slash me-1"></i>Create as Inactive
                                            </label>
                                        </div>
                                        <small class="text-muted">
                                            If enabled, this category will be created but marked as inactive
                                        </small>
                                        <span asp-validation-for="Category.IsDelete" class="text-danger small d-block"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-page="Index" class="btn btn-outline-secondary btn-lg me-md-2">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-plus me-2"></i>Create Category
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Help Section -->
            <div class="card mt-4 border-info">
                <div class="card-body">
                    <h6 class="card-title text-info">
                        <i class="fas fa-lightbulb me-2"></i>Tips for Creating Categories
                    </h6>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            Use clear, descriptive names that users will understand
                        </li>
                        <li class="mb-2">
                            <i class="fas fa-check text-success me-2"></i>
                            Keep category names concise but meaningful
                        </li>
                        <li class="mb-0">
                            <i class="fas fa-check text-success me-2"></i>
                            Consider how categories will be organized in your store
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Add some interactive feedback
        document.getElementById('deleteSwitch').addEventListener('change', function() {
            const label = this.nextElementSibling;
            if (this.checked) {
                label.innerHTML = '<i class="fas fa-eye-slash me-1"></i>Create as Inactive';
                label.classList.add('text-warning');
            } else {
                label.innerHTML = '<i class="fas fa-eye me-1"></i>Create as Active';
                label.classList.remove('text-warning');
            }
        });

        // Auto-focus on title input
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelector('input[asp-for="Category.ProductCategoryTitle"]').focus();
        });
    </script>
}

<style>
    .card {
        border-radius: 0.5rem;
        transition: transform 0.2s ease-in-out;
    }

    .form-control:focus {
        border-color: #198754;
        box-shadow: 0 0 0 0.2rem rgba(25, 135, 84, 0.25);
    }

    .btn {
        font-weight: 500;
        transition: all 0.2s ease-in-out;
    }

        .btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

    .container-fluid {
        padding: 2rem;
    }

    .d-grid.gap-2.d-md-flex {
        flex-direction: column;
    }

    }
</style>