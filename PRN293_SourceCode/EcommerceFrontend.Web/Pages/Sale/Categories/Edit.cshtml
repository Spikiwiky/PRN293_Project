@page
@model EcommerceFrontend.Web.Pages.Sale.Categories.EditModel
@{
    ViewData["Title"] = "Edit Category";
}
<h1>Edit Category</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Category.ProductCategoryTitle"></label>
        <input asp-for="Category.ProductCategoryTitle" class="form-control" />
        <span asp-validation-for="Category.ProductCategoryTitle" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Category.IsDelete"></label>
        <input asp-for="Category.IsDelete" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-page="Index" class="btn btn-secondary">Back</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}