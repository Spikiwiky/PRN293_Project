@page
@model EcommerceFrontend.Web.Pages.Sale.Categories.EditModel
@{
    ViewData["Title"] = "Edit Category";
    Layout = "_SaleLayout";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                        <a asp-page="Index" class="text-decoration-none">
                            <i class="fas fa-tags me-1"></i>Categories
                        </a>
                    </li>
                    <li class="breadcrumb-item active">Edit Category</li>
                </ol>
            </nav>
            <h1 class="h2 text-primary mb-0">
                <i class="fas fa-edit me-2"></i>Edit Category
            </h1>
            <hr class="mt-3">
        </div>
    </div>

    <!-- Edit Form -->
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-info-circle me-2"></i>Category Information
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form method="post">
                        <div class="row">
                            <!-- Category ID -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Category.ProductCategoryId" class="form-label fw-bold">
                                    <i class="fas fa-hashtag me-1"></i>Category ID
                                </label>
                                <input asp-for="Category.ProductCategoryId"
                                       class="form-control form-control-lg bg-light"
                                       readonly />
                                <div class="form-text">This ID cannot be changed</div>
                            </div>

                            <!-- Category Title -->
                            <div class="col-md-6 mb-3">
                                <label asp-for="Category.ProductCategoryTitle" class="form-label fw-bold">
                                    <i class="fas fa-tag me-1"></i>Category Title <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Category.ProductCategoryTitle"
                                       class="form-control form-control-lg"
                                       required
                                       placeholder="Enter category title" />
                                <span asp-validation-for="Category.ProductCategoryTitle" class="text-danger small"></span>
                            </div>

                            <!-- Delete Status -->
                            <div class="col-12 mb-4">
                                <div class="card border-warning">
                                    <div class="card-body">
                                        <div class="form-check form-switch">
                                            <input asp-for="Category.IsDelete"
                                                   type="checkbox"
                                                   class="form-check-input"
                                                   id="deleteSwitch" />
                                            <label asp-for="Category.IsDelete"
                                                   class="form-check-label fw-bold text-warning"
                                                   for="deleteSwitch">
                                                <i class="fas fa-exclamation-triangle me-1"></i>Mark as Deleted
                                            </label>
                                        </div>
                                        <small class="text-muted">
                                            When enabled, this category will be marked as deleted but not permanently removed
                                        </small>
                                        <span asp-validation-for="Category.IsDelete" class="text-danger small d-block"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-page="Index" class="btn btn-outline-secondary btn-lg me-md-2">
                                <i class="fas fa-arrow-left me-2"></i>Back to List
                            </a>
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-save me-2"></i>Update Category
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Add some interactive feedback
        document.getElementById('deleteSwitch').addEventListener('change', function() {
            const label = this.nextElementSibling;
            if (this.checked) {
                label.classList.remove('text-warning');
                label.classList.add('text-danger');
            } else {
                label.classList.remove('text-danger');
                label.classList.add('text-warning');
            }
        });
    </script>
}

<style>
    .card {
        border-radius: 0.5rem;
        transition: transform 0.2s ease-in-out;
    }

    .form-control:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
    }

    .btn {
        font-weight: 500;
        transition: all 0.2s ease-in-out;
    }

        .btn:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

    .container-fluid {
        padding: 2rem;
    }

    .d-grid.gap-2.d-md-flex {
        flex-direction: column;
    }

    }
</style>