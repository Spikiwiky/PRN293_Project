@page "{id:int}"
@model EcommerceFrontend.Web.Pages.Sale.Sale_Blog.EditModel

<h1>Chỉnh sửa Blog</h1>

<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Blog.BlogId" />

    <div class="form-group">
        <label>Tiêu đề</label>
        <input asp-for="Blog.BlogTittle" class="form-control" />
        <span asp-validation-for="Blog.BlogTittle" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Tóm tắt</label>
        <textarea asp-for="Blog.BlogSummary" class="form-control"></textarea>
        <span asp-validation-for="Blog.BlogSummary" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Nội dung</label>
        <textarea asp-for="Blog.BlogContent" class="form-control"></textarea>
        <span asp-validation-for="Blog.BlogContent" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Ảnh hiện tại</label>
        @if (!string.IsNullOrEmpty(Model.Blog.BlogImage))
        {
            <div class="mb-2">
                <img src="@Model.Blog.BlogImage" alt="Blog image" style="max-width:150px;" />
            </div>
        }
        else
        {
            <p><i>Chưa có ảnh</i></p>
        }
    </div>

    <!-- Hidden để giữ giá trị ảnh hiện tại -->
    <input type="hidden" asp-for="Blog.BlogImage" id="Blog_BlogImage" />

    <div class="form-group form-check mb-3">
        <input type="checkbox" class="form-check-input" id="removeImage"
               onchange="if(this.checked){document.getElementById('Blog_BlogImage').value='';}">
        <label class="form-check-label" for="removeImage">Xóa ảnh hiện tại</label>
    </div>

    <div class="form-group">
        <label>Thay ảnh mới</label>
        <input asp-for="UploadImage" type="file" class="form-control" />
        <span asp-validation-for="UploadImage" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Ngày đăng</label>
        <input asp-for="Blog.PublishedDate" type="date" class="form-control" />
        <span asp-validation-for="Blog.PublishedDate" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="Blog.IsPublished" type="checkbox" class="form-check-input" />
        <label class="form-check-label" asp-for="Blog.IsPublished">Xuất bản</label>
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
        <a asp-page="Index" class="btn btn-secondary">Hủy</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
