@page "{id:int}"
@model EcommerceFrontend.Web.Pages.Sale.Sale_Blog.Category.EditModel
@{
    ViewData["Title"] = "Sửa danh mục Blog";
}

<div class="container mt-4">
    <h1 class="mb-4">Sửa danh mục Blog</h1>
    <form method="post" class="border p-4 rounded bg-light shadow-sm">
        <input type="hidden" asp-for="Category.BlogCategoryId" />

        <div class="form-group mb-3">
            <label asp-for="Category.BlogCategoryTitle" class="form-label">Tên danh mục</label>
            <input asp-for="Category.BlogCategoryTitle" class="form-control" />
            <span asp-validation-for="Category.BlogCategoryTitle" class="text-danger"></span>
        </div>

        <div class="form-check mb-3">
            <input asp-for="Category.IsDelete" class="form-check-input" type="checkbox" id="IsDeleteCheck" />
            <label class="form-check-label" for="IsDeleteCheck">Đã xóa (ẩn khỏi hiển thị)</label>
        </div>

        <div class="d-flex justify-content-start gap-2">
            <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
            <a asp-page="Index" class="btn btn-secondary">Hủy</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
