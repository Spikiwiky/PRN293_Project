@page
@model EditProfileModel
@{
    ViewData["Title"] = "Edit Profile";
}

<div class="container mt-4">
    <h2>Edit Profile</h2>
    <form method="post" class="border p-4 rounded bg-light shadow-sm">
        <input type="hidden" asp-for="Profile.UserId" />
        <div class="mb-3">
            <label asp-for="Profile.Email" class="form-label"></label>
            <input asp-for="Profile.Email" class="form-control" readonly />
        </div>
        <div class="mb-3">
            <label asp-for="Profile.UserName" class="form-label"></label>
            <input asp-for="Profile.UserName" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Profile.Phone" class="form-label"></label>
            <input asp-for="Profile.Phone" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Profile.DateOfBirth" class="form-label"></label>
            <input asp-for="Profile.DateOfBirth" type="date" class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Profile.Address" class="form-label"></label>
            <input asp-for="Profile.Address" class="form-control" />
        </div>

        <hr />
        <div class="form-check mb-2">
            <input type="checkbox" id="togglePassword" class="form-check-input"
                   onclick="togglePasswordVisibility()" />
            <label for="togglePassword" class="form-check-label">Hiển thị mật khẩu</label>
        </div>
        <div class="mb-3">
            <label asp-for="Profile.Password" class="form-label"></label>
            <input asp-for="Profile.Password" class="form-control" type="password" />
        </div>
        <div class="mb-3">
            <label asp-for="Profile.ConfirmPassword" class="form-label"></label>
            <input asp-for="Profile.ConfirmPassword" class="form-control" type="password" />
            <span asp-validation-for="Profile.ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePasswordVisibility() {
            const password = document.querySelector('[name="Profile.Password"]');
            const confirm = document.querySelector('[name="Profile.ConfirmPassword"]');
            const type = password.type === "password" ? "text" : "password";
            password.type = type;
            confirm.type = type;
        }
    </script>
}
