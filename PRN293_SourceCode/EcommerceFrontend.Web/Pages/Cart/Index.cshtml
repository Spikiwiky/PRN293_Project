    <script>
        function showLoading() {
            document.getElementById('loadingSpinner').style.display = 'block';
        }

        function hideLoading() {
            document.getElementById('loadingSpinner').style.display = 'none';
        }

        function showSuccess(message) {
            swal("Thành công!", message, "success");
        }

        function showError(message) {
            swal("Lỗi!", message, "error");
        }

        function showConfirm(title, message, callback) {
            swal({
                title: title,
                text: message,
                icon: "warning",
                buttons: true,
                dangerMode: true,
            }).then((willDelete) => {
                if (willDelete) {
                    callback();
                }
            });
        }

        async function updateQuantity(cartDetailId, quantity) {
            if (quantity < 1) return;
            
            showLoading();
            try {
                const response = await fetch('/Cart?handler=UpdateQuantity', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify({
                        cartDetailId: cartDetailId,
                        quantity: parseInt(quantity)
                    })
                });

                if (response.ok) {
                    location.reload();
                } else {
                    const error = await response.text();
                    showError('Cập nhật số lượng thất bại: ' + error);
                }
            } catch (error) {
                showError('Có lỗi xảy ra: ' + error.message);
            } finally {
                hideLoading();
            }
        }

        function increaseQuantity(cartDetailId) {
            const input = document.querySelector(`[data-cart-detail-id="${cartDetailId}"] .quantity-input`);
            const newQuantity = parseInt(input.value) + 1;
            updateQuantity(cartDetailId, newQuantity);
        }

        function decreaseQuantity(cartDetailId) {
            const input = document.querySelector(`[data-cart-detail-id="${cartDetailId}"] .quantity-input`);
            const newQuantity = parseInt(input.value) - 1;
            if (newQuantity >= 1) {
                updateQuantity(cartDetailId, newQuantity);
            }
        }

        function removeFromCart(cartDetailId) {
            showConfirm(
                "Xóa sản phẩm",
                "Bạn có chắc chắn muốn xóa sản phẩm này khỏi giỏ hàng?",
                () => {
                    showLoading();
                    fetch('/Cart?handler=RemoveFromCart', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        },
                        body: JSON.stringify({
                            cartDetailId: cartDetailId
                        })
                    })
                    .then(response => {
                        if (response.ok) {
                            location.reload();
                        } else {
                            return response.text();
                        }
                    })
                    .then(error => {
                        if (error) {
                            showError('Xóa sản phẩm thất bại: ' + error);
                        }
                    })
                    .catch(error => {
                        showError('Có lỗi xảy ra: ' + error.message);
                    })
                    .finally(() => {
                        hideLoading();
                    });
                }
            );
        }

        function clearCart() {
            showConfirm(
                "Xóa tất cả",
                "Bạn có chắc chắn muốn xóa tất cả sản phẩm khỏi giỏ hàng?",
                () => {
                    showLoading();
                    fetch('/Cart?handler=ClearCart', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        }
                    })
                    .then(response => {
                        if (response.ok) {
                            location.reload();
                        } else {
                            return response.text();
                        }
                    })
                    .then(error => {
                        if (error) {
                            showError('Xóa giỏ hàng thất bại: ' + error);
                        }
                    })
                    .catch(error => {
                        showError('Có lỗi xảy ra: ' + error.message);
                    })
                    .finally(() => {
                        hideLoading();
                    });
                }
            );
        }

        function proceedToCheckout() {
            // Redirect to checkout page
            window.location.href = '/Checkout';
        }

        // Auto-hide alerts after 5 seconds
        setTimeout(function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                const bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 5000);
    </script>
