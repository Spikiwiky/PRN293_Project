                    <i class="zmdi zmdi-shopping-cart me-3"></i>Giỏ hàng của bạn
                </h1>
                <p class="stext-102 cl0 mt-2">
                    Quản lý sản phẩm trong giỏ hàng
                </p>
            </div>

            <!-- Alert Messages -->
            @if (!string.IsNullOrEmpty(Model.SuccessMessage))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fa fa-check-circle me-2"></i>@Model.SuccessMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (!string.IsNullOrEmpty(Model.ErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fa fa-exclamation-circle me-2"></i>@Model.ErrorMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Loading Spinner -->
            <div class="loading-spinner" id="loadingSpinner">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <p class="mt-2">Đang xử lý...</p>
            </div>

            <div class="row">
                <!-- Cart Items -->
                <div class="col-lg-8">
                    @if (Model.CartItems != null && Model.CartItems.Any())
                    {
                        @foreach (var item in Model.CartItems)
                        {
                            <div class="cart-item" data-cart-detail-id="@item.CartDetailId">
                                <div class="row align-items-center">
                                    <div class="col-md-2 col-4">
                                        <img src="@(item.ProductImageUrl ?? "~/images/product-min-01.jpg")" 
                                             class="cart-item-image" 
                                             alt="@item.ProductName">
                                    </div>
                                    
                                    <div class="col-md-4 col-8">
                                        <h5 class="mb-1">@item.ProductName</h5>
                                        <p class="text-muted mb-1">@item.ProductBrand</p>
                                        @if (!string.IsNullOrEmpty(item.VariantAttributes))
                                        {
                                            <div class="variant-info">
                                                <small><strong>Biến thể:</strong> @item.VariantAttributes</small>
                                            </div>
                                        }
                                    </div>
                                    
                                    <div class="col-md-2 col-6">
                                        <div class="quantity-controls">
                                            <button class="quantity-btn" onclick="decreaseQuantity(@item.CartDetailId)" 
                                                    @(item.Quantity <= 1 ? "disabled" : "")>
                                                <i class="fa fa-minus"></i>
                                            </button>
                                            <input type="number" class="quantity-input" 
                                                   value="@item.Quantity" 
                                                   min="1" 
                                                   onchange="updateQuantity(@item.CartDetailId, this.value)">
                                            <button class="quantity-btn" onclick="increaseQuantity(@item.CartDetailId)">
                                                <i class="fa fa-plus"></i>
                                            </button>
                                        </div>
                                    </div>
                                    
                                    <div class="col-md-2 col-3">
                                        <h6 class="text-primary mb-0">$@item.Price.ToString("N2")</h6>
                                    </div>
                                    
                                    <div class="col-md-2 col-3">
                                        <button class="remove-btn" onclick="removeFromCart(@item.CartDetailId)">
                                            <i class="fa fa-trash me-1"></i>Xóa
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="empty-cart">
                            <div class="empty-cart-icon">
                                <i class="zmdi zmdi-shopping-cart"></i>
                            </div>
                            <h3 class="text-muted">Giỏ hàng trống</h3>
                            <p class="text-muted mb-4">Bạn chưa có sản phẩm nào trong giỏ hàng.</p>
                            <a href="/Products" class="continue-shopping-btn">
                                <i class="fa fa-shopping-bag me-2"></i>Tiếp tục mua sắm
                            </a>
                        </div>
                    }
                </div>

                <!-- Cart Summary -->
                <div class="col-lg-4">
                    <div class="cart-summary">
                        <h4 class="mb-4">
                            <i class="fa fa-calculator me-2"></i>Tổng quan giỏ hàng
                        </h4>
                        
                        <div class="summary-item">
                            <span>Số lượng sản phẩm:</span>
                            <span>@Model.CartItemCount</span>
                        </div>
                        
                        <div class="summary-item">
                            <span>Tổng số lượng:</span>
                            <span>@Model.TotalQuantity</span>
                        </div>
                        
                        <div class="summary-item summary-total">
                            <span>Tổng tiền:</span>
                            <span>$@Model.TotalAmount.ToString("N2")</span>
                        </div>
                        
                        @if (Model.CartItems != null && Model.CartItems.Any())
                        {
                            <button class="checkout-btn mt-4" onclick="proceedToCheckout()">
                                <i class="fa fa-credit-card me-2"></i>Tiến hành thanh toán
                            </button>
                            
                            <button class="btn btn-outline-danger w-100 mt-3" onclick="clearCart()">
                                <i class="fa fa-trash me-2"></i>Xóa tất cả
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
