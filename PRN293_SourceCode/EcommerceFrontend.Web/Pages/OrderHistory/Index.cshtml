@functions {
    private string GetStatusBadgeColor(string statusName)
    {
        return statusName?.ToLower() switch
        {
            "pending" => "warning",      // ID: 1 - Màu vàng (chờ xử lý)
            "shipping" => "primary",     // ID: 2 - Màu xanh dương (đang giao)
            "delivered" => "success",    // ID: 3 - Màu xanh lá (đã giao)
            "completed" => "success",    // ID: 4 - Màu xanh lá (hoàn thành)
            "canceled" => "danger",      // ID: 5 - Màu đỏ (đã hủy)
            _ => "secondary"             // Màu xám (trạng thái khác)
        };
    }
} 