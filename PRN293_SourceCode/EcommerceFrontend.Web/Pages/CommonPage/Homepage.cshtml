    <script>
        $(document).ready(function(){
            // Debug: Log tab click events
            $('a[data-toggle="tab"]').on('click', function (e) {
                console.log('Tab clicked:', $(this).text(), 'href:', $(this).attr('href'));
            });

            // Initialize Bootstrap tabs
            $('a[data-toggle="tab"]').on('click', function (e) {
                e.preventDefault();
                $(this).tab('show');
            });

            // Wait a bit for DOM to be fully ready
            setTimeout(function() {
                // Debug: Check if products exist
                console.log('Featured products count:', $('.tab-pane#featured .item-slick2').length);
                console.log('Sale products count:', $('.tab-pane#sale .item-slick2').length);
                console.log('Top rate products count:', $('.tab-pane#top-rate .item-slick2').length);

                // Initialize slick2 for each tab
                $('.slick2').each(function(){
                    if (!$(this).hasClass('slick-initialized')) {
                        $(this).slick({
                            slidesToShow: 4,
                            slidesToScroll: 1,
                            autoplay: false,
                            infinite: true,
                            speed: 300,
                            dots: false,
                            arrows: true,
                            responsive: [
                                {
                                    breakpoint: 991,
                                    settings: {
                                        slidesToShow: 3,
                                        slidesToScroll: 1
                                    }
                                },
                                {
                                    breakpoint: 767,
                                    settings: {
                                        slidesToShow: 2,
                                        slidesToScroll: 1
                                    }
                                },
                                {
                                    breakpoint: 480,
                                    settings: {
                                        slidesToShow: 1,
                                        slidesToScroll: 1
                                    }
                                }
                            ]
                        });
                    }
                });

                // Reinitialize slick2 when tab is shown
                $('a[data-toggle="tab"]').on('shown.bs.tab', function (e) {
                    var nameTab = $(e.target).attr('href'); 
                    console.log('Tab shown:', nameTab);
                    $(nameTab).find('.slick2').slick('reinit');          
                });
            }, 100);
        });
    </script>
