                                </div>
                            }
                        </div>
                    </div>
                </div>

                <!-- Top Rate -->
                <div class="tab-pane fade" id="top-rate" role="tabpanel">
                    <div class="wrap-slick2">
                        <div class="slick2">
                            @if (Model.TopRateProducts != null && Model.TopRateProducts.Any())
