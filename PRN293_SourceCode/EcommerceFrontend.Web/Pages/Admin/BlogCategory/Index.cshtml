@page
@model EcommerceFrontend.Web.Pages.Admin.BlogCategory.IndexModel
@{
    ViewData["Title"] = "Blog Category Management";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Blog Category Management</h1>
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <div><i class="fas fa-table me-1"></i>Blog Categories</div>
            <a asp-page="./Create" class="btn btn-primary">Create New Category</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model.Categories)
                        {
                            <tr>
                                <td>@category.BlogCategoryId</td>
                                <td>@category.BlogCategoryTitle</td>
                                <td>@(category.IsDelete ? "Deleted" : "Active")</td>
                                <td>
                                    <div class="btn-group">
                                        <a asp-page="./Edit" asp-route-id="@category.BlogCategoryId" class="btn btn-sm btn-primary">Edit</a>
                                        @if (!category.IsDelete)
                                        {
                                            <a asp-page="./Delete" asp-route-id="@category.BlogCategoryId" class="btn btn-sm btn-danger">Delete</a>
                                        }
                                        else
                                        {
                                            <button type="button" class="btn btn-sm btn-success"
                                                    onclick="restoreCategory(@category.BlogCategoryId)">
                                                Restore
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
               function deleteCategory(id) {
            if (confirm("Are you sure you want to delete this category?")) {
                fetch(`https://localhost:7257/api/blogcategories/${id}`, {
                    method: "DELETE"
                })
                .then(response => {
                    if (response.ok) {
                        location.reload(); // Refresh page if successful
                    } else {
                        alert("Delete failed");
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert("Network error");
                });
            }
        }

        function restoreCategory(id) {
            if (confirm("Are you sure you want to restore this category?")) {
                fetch(`https://localhost:7257/api/blogcategories/${id}/restore`, {
                    method: "PATCH"
                })
                .then(response => {
                    if (response.ok) {
                        location.reload();
                    } else {
                        alert("Error restoring category.");
                    }
                });
            }
        }
    </script>
}