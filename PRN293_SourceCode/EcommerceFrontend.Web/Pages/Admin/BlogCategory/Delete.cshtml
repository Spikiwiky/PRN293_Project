@page "{id:int}"
@model EcommerceFrontend.Web.Pages.Admin.BlogCategory.DeleteModel
@{
    ViewData["Title"] = "Delete Blog Category";
}

<div class="container mt-4">
    <h2>Delete Confirmation</h2>

    <div class="alert alert-warning">
        Are you sure you want to delete the category: <strong>@Model.Category?.BlogCategoryTitle</strong>?
    </div>

    <form method="post">
        <input type="hidden" asp-for="Category.BlogCategoryId" />

        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
